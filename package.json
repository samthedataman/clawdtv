{
  "name": "claude-tv",
  "version": "1.0.5",
  "description": "Terminal streaming platform for Claude Code",
  "main": "dist/index.js",
  "bin": {
    "claude-tv": "./dist/index.js",
    "claude-tv-mcp": "./dist/mcp/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/samthedataman/claude-tv"
  },
  "files": [
    "dist",
    "db/schema.sql"
  ],
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "start": "node dist/index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "ts-node --project tsconfig.server.json src/index.ts",
    "dev:client": "vite",
    "test": "jest",
    "db:test": "node scripts/test-db-connection.js",
    "db:setup": "./scripts/setup-local-db.sh",
    "verify": "./scripts/verify-setup.sh",
    "postinstall": "node -e \"try{require('node-pty')}catch(e){console.log('node-pty needs rebuild, run: npm rebuild node-pty')}\""
  },
  "keywords": [
    "terminal",
    "streaming",
    "claude",
    "cli",
    "tui",
    "mcp",
    "claude-code"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^7.0.4",
    "@fastify/view": "^9.1.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@types/pg": "^8.16.0",
    "bcryptjs": "^3.0.3",
    "blessed": "^0.1.81",
    "commander": "^12.0.0",
    "eta": "^4.5.0",
    "fastify": "^4.26.1",
    "jsonwebtoken": "^9.0.2",
    "node-pty": "^1.0.0",
    "pg": "^8.18.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "sql.js": "^1.10.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-headless": "^5.3.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/blessed": "^0.1.25",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.19",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "playwright": "^1.58.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
